<?xml version="1.0" encoding="utf-8"?>
<com.sysu.databank.tools.BottomControlPanel xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:layout_gravity="center_vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >
    
    <com.sysu.databank.tools.ImageText  
        android:id="@+id/btn_trade"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_alignParentLeft="true" />  
  
    <com.sysu.databank.tools.ImageText   
        android:id="@+id/btn_myprofit"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_toRightOf="@id/btn_trade" />  
  
    <com.sysu.databank.tools.ImageText   
        android:id="@+id/btn_infoinput"  
        android:layout_width="wrap_content"  
        android:layout_height="wrap_content"  
        android:layout_alignParentRight="true" /> 

</com.sysu.databank.tools.BottomControlPanel>
